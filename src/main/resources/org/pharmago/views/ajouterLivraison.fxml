<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.pharmago.controllers.AjouterLivraisonController"
           styleClass="dialog-background">

    <VBox alignment="CENTER" spacing="25" styleClass="dialog-box">

        <!-- Titre -->
        <Label text="Ajout d’une nouvelle livraison" styleClass="dialog-title" />

        <!-- Formulaire -->
        <GridPane hgap="20" vgap="15" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>

            <!-- Ligne 0 -->
            <ComboBox fx:id="clientComboBox" promptText="Sélectionner un client"
                      GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="350"/>

            <!-- Ligne 1 -->
            <DatePicker fx:id="dateLivField" promptText="Date de livraison"
                        GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Spinner fx:id="qttField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Ligne 2 -->
            <TextField fx:id="taxeField" promptText="Taxe (DA)" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="coutField" promptText="Coût total (DA)" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Ligne 3 -->
            <ComboBox fx:id="statutField" promptText="Statut" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="typeField" promptText="Type" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Ligne 4 — NOUVEAU : Sélection du médicament -->
            <ComboBox fx:id="medicamentComboBox" promptText="Sélectionner un médicament"
                      GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" prefWidth="350"/>

            <!-- Ligne 5 -->
            <CheckBox fx:id="urgentCheckBox" text="Priorité urgente"
                      GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        </GridPane>

        <!-- Boutons -->
        <HBox alignment="CENTER" spacing="25">
            <Button fx:id="btnAnnuler" text="annuler" styleClass="btn-annuler"/>
            <Button fx:id="btnConfirmer" text="confirmer" styleClass="btn-ajouter"/>
        </HBox>
    </VBox>
</StackPane>
