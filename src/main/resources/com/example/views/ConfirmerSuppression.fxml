<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.controllers.ConfirmerSuppressionController"
           styleClass="dialog-background">

    <VBox alignment="CENTER" spacing="20" styleClass="dialog-box">

        <!-- Titre -->
        <Label fx:id="titreLabel"
               text="Confirmation de suppression"
               styleClass="dialog-title" wrapText="true" />

        <!-- Informations principales -->
        <VBox alignment="CENTER" spacing="8">

            <Label fx:id="codeLabel" styleClass="dialog-client-code"/>
            <Label fx:id="nomLabel" styleClass="dialog-client-nom"/>

            <!-- Bloc spécifique client -->
            <VBox fx:id="blocClient" alignment="CENTER" spacing="5">
                <HBox alignment="CENTER" spacing="5">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="/assets/localisateur.png"/>
                    </ImageView>
                    <Label fx:id="adresseLabel" styleClass="dialog-client-info"/>
                </HBox>

                <HBox alignment="CENTER" spacing="5">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <Image url="/assets/telephone.png"/>
                    </ImageView>
                    <Label fx:id="telephoneLabel" styleClass="dialog-client-info"/>
                </HBox>
            </VBox>

            <!-- Bloc spécifique médicament -->
            <VBox fx:id="blocMedicament" alignment="CENTER" spacing="5">
                <Label fx:id="quantite" styleClass="dialog-client-info"/>
                <Label fx:id="prix" styleClass="dialog-client-info"/>
            </VBox>

            <VBox fx:id="blocLivraison" alignment="CENTER" spacing="5">
                <Label fx:id="quantiteLivraison" styleClass="dialog-client-info"/>
                <Label fx:id="taxe" styleClass="dialog-client-info"/>
                <Label fx:id="coutTotal" styleClass="dialog-client-info"/>
            </VBox>
        </VBox>

        <!-- Boutons -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="btnAnnuler" text="Annuler" styleClass="btn-annuler"/>
            <Button fx:id="btnConfirmer" text="Confirmer" styleClass="btn-confirmer"/>
        </HBox>
    </VBox>
</StackPane>
