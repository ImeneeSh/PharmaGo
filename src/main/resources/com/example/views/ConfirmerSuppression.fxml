<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.controllers.ConfirmerSuppressionController"
           styleClass="dialog-background">

    <VBox alignment="CENTER" spacing="20" styleClass="dialog-box">

        <!-- Message principal -->
        <Label text="Êtes-vous sûr de vouloir supprimer ce client ?"
               styleClass="dialog-title" wrapText="true" />

        <!-- Informations du client -->
        <VBox alignment="CENTER" spacing="5">
            <Label fx:id="codeLabel" styleClass="dialog-client-code"/>
            <Label fx:id="nomLabel" styleClass="dialog-client-nom"/>

            <HBox alignment="CENTER" spacing="5">
                <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                    <Image url="/assets/localisateur.png"/>
                </ImageView>
                <Label fx:id="adresseLabel" styleClass="dialog-client-info"/>
            </HBox>

            <HBox alignment="CENTER" spacing="5">
                <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                    <Image url="/assets/telephone.png"/>
                </ImageView>
                <Label fx:id="telephoneLabel" styleClass="dialog-client-info"/>
            </HBox>
        </VBox>

        <!-- Boutons -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="btnAnnuler" text="annuler" styleClass="btn-annuler"/>
            <Button fx:id="btnConfirmer" text="confirmer" styleClass="btn-confirmer"/>
        </HBox>
    </VBox>
</StackPane>
