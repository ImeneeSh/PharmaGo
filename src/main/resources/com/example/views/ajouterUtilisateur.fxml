<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.controllers.AjouterUtilisateurController"
           styleClass="dialog-background">

    <VBox alignment="CENTER" spacing="25" styleClass="dialog-box">

       
        <Label text="Ajout d’un nouvel utilisateur" styleClass="dialog-title" />

      
        <GridPane hgap="20" vgap="15" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>

           
            <TextField fx:id="nomField" promptText="Nom" />
            <TextField fx:id="prenomField" promptText="Prénom" GridPane.columnIndex="1"/>

           
            <TextField fx:id="emailField" promptText="Adresse email" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="motDePasseField" promptText="Mot de passe" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

           
            <PasswordField fx:id="confirmerMotDePasseField" promptText="Confirmer mot de passe" GridPane.rowIndex="2" GridPane.columnIndex="0"/>


        </GridPane>

       
        <HBox alignment="CENTER" spacing="25">
            <Button fx:id="btnAnnuler" text="annuler" styleClass="btn-annuler"/>
            <Button fx:id="btnConfirmer" text="confirmer" styleClass="btn-ajouter"/>
        </HBox>
    </VBox>
</StackPane>
