<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.controllers.AjouterMedicamentController"
           styleClass="dialog-background">

    <VBox alignment="CENTER" spacing="25" styleClass="dialog-box">

        <!-- Titre -->
        <Label text="Ajout d’un nouveau médicament" styleClass="dialog-title" />

        <!-- Formulaire -->
        <GridPane hgap="20" vgap="15" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>

            <TextField fx:id="nomField" promptText="nom" />
            <TextField fx:id="DatePerField" promptText="Date de péremption" GridPane.columnIndex="1"/>

            <TextField fx:id="quantiteField" promptText="quantité" GridPane.rowIndex="1"/>
            <TextField fx:id="prixField" promptText="prix" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>

        <!-- Boutons -->
        <HBox alignment="CENTER" spacing="25">
            <Button fx:id="btnAnnuler" text="annuler" styleClass="btn-annuler"/>
            <Button fx:id="btnConfirmer" text="confirmer" styleClass="btn-ajouter"/>
        </HBox>
    </VBox>
</StackPane>
