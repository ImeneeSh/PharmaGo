<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controllers.TableauBordController"
            styleClass="root-dashboard">


    <left>
        <fx:include source="Menu.fxml" />
    </left>

   
    <center>
        <HBox spacing="0">
            <Region prefWidth="12" />
            <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" style="-fx-background-color:transparent;" HBox.hgrow="ALWAYS">
                <VBox alignment="TOP_CENTER" spacing="40" styleClass="dashboard-content" VBox.vgrow="ALWAYS">

               
                <VBox style="-fx-padding: 30 50 0 50;">
                    <Label text="Tableau de bord" styleClass="dashboard-title" />
                    <Label text="Bienvenue sur PharmaGo - Vue d'ensemble de votre activité" styleClass="dashboard-subtitle" />
                </VBox>

               
                <GridPane hgap="50" vgap="50" style="-fx-padding: 0 80 0 80;">
               
                    <VBox styleClass="card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <HBox alignment="TOP_RIGHT">
                            <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                                <Image url="/assets/liste-des-utilisateurs.png"/>
                            </ImageView>
                        </HBox>
                        <Label text="Total clients" styleClass="card-title"/>
                        <Label fx:id="lblTotalClients" text="350" styleClass="card-number"/>
                        <Label fx:id="lblNouveauxClients" text="+2 clients ce mois-ci" styleClass="card-subtext"/>
                    </VBox>

                   
                    <VBox styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <HBox alignment="TOP_RIGHT">
                            <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                                <Image url="/assets/pilule (1).png"/>
                            </ImageView>
                        </HBox>
                        <Label text="Total médicaments" styleClass="card-title"/>
                        <Label fx:id="lblTotalMedicaments" text="150" styleClass="card-number"/>
                        <Label fx:id="lblNouveauxMedicaments" text="+5 médicaments ce mois-ci" styleClass="card-subtext"/>
                    </VBox>

                  
                    <VBox styleClass="card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <HBox alignment="TOP_RIGHT">
                            <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                                <Image url="/assets/livraison (1).png"/>
                            </ImageView>
                        </HBox>
                        <Label text="Total livraisons" styleClass="card-title"/>
                        <Label fx:id="lblTotalLivraisons" text="167" styleClass="card-number"/>
                        <Label fx:id="lblNouvellesLivraisons" text="+2 livraisons ce mois-ci" styleClass="card-subtext"/>
                    </VBox>

                    
                    <VBox styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <HBox alignment="TOP_RIGHT">
                            <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                                <Image url="/assets/livraison (4).png"/>
                            </ImageView>
                        </HBox>
                        <Label text="Livraisons en attente" styleClass="card-title"/>
                        <Label fx:id="lblLivraisonsAttente" text="10" styleClass="card-number"/>
                    </VBox>
                </GridPane>

              
                <VBox style="-fx-padding: 0 50 0 50;">
                    <Label text="Livraisons récentes" styleClass="section-title"/>
                    <VBox fx:id="boxLivraisonsRecentes" spacing="10">
                        <HBox styleClass="recent-item" spacing="10">
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="L0001" styleClass="recent-code"/>
                                <Label text="Djamel Debbag" styleClass="recent-name"/>
                            </VBox>
                            <Label text="Livrée" styleClass="status-delivered"/>
                        </HBox>

                        <HBox styleClass="recent-item" spacing="10">
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="L0002" styleClass="recent-code"/>
                                <Label text="Amina Berrabah" styleClass="recent-name"/>
                            </VBox>
                            <Label text="Livrée" styleClass="status-delivered"/>
                        </HBox>

                        <HBox styleClass="recent-item" spacing="10">
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="L0003" styleClass="recent-code"/>
                                <Label text="Djamel Debbag" styleClass="recent-name"/>
                            </VBox>
                            <Label text="Livrée" styleClass="status-delivered"/>
                        </HBox>
                    </VBox>
                </VBox>


                
                <VBox id="med-section" style="-fx-padding: 0 50 50 50;">
                    <Label text="Médicaments à surveiller" styleClass="section-title"/>
                    <VBox fx:id="boxMedicamentsSurveiller" spacing="10">
                        <HBox styleClass="recent-item" spacing="10">
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="Insuline Rapide" styleClass="recent-code"/>
                                <Label text="Expire le 15/03/2025" styleClass="recent-name"/>
                            </VBox>
                            <Label text="Attention" styleClass="status-alert"/>
                        </HBox>

                        <HBox styleClass="recent-item" spacing="10">
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="Insuline Lente" styleClass="recent-code"/>
                                <Label text="Expire le 22/04/2025" styleClass="recent-name"/>
                            </VBox>
                            <Label text="Attention" styleClass="status-alert"/>
                        </HBox>

                        <HBox styleClass="recent-item" spacing="10">
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="Insuline Rapide" styleClass="recent-code"/>
                                <Label text="Expire le 15/03/2025" styleClass="recent-name"/>
                            </VBox>
                            <Label text="Attention" styleClass="status-alert"/>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
        </HBox>
    </center>
</BorderPane>
