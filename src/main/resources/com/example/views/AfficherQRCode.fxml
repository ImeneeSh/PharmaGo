<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.controllers.AfficherQRCodeController"
           styleClass="dialog-background">

    <VBox alignment="CENTER" spacing="25" styleClass="dialog-box">

       
        <Label text="QR Code de la livraison" styleClass="dialog-title" />

       
        <HBox spacing="30" alignment="CENTER">
           
            <VBox spacing="10" alignment="CENTER">
                <ImageView fx:id="qrCodeImageView" fitWidth="200" fitHeight="200" preserveRatio="true" />
                <Label text="Scannez le QR code" styleClass="qr-label" />
            </VBox>

           
            <VBox spacing="15" alignment="CENTER_LEFT" prefWidth="300">
                <Label text="Informations de la livraison" styleClass="info-title" />
                
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints minWidth="150" />
                    </columnConstraints>

                    <Label text="Numéro :" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="dialog-client-info" />
                    <Label fx:id="numeroLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="dialog-client-nom" />

                    <Label text="Client :" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="dialog-client-info" />
                    <Label fx:id="clientLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="dialog-client-nom" />

                    <Label text="Date :" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="dialog-client-info" />
                    <Label fx:id="dateLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="dialog-client-nom" />

                    <Label text="Quantité :" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="dialog-client-info" />
                    <Label fx:id="quantiteLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="dialog-client-nom" />

                    <Label text="Statut :" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="dialog-client-info" />
                    <Label fx:id="statutLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="dialog-client-nom" />

                    <Label text="Type :" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="dialog-client-info" />
                    <Label fx:id="typeLabel" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="dialog-client-nom" />

                    <Label text="Taxe :" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="dialog-client-info" />
                    <Label fx:id="taxeLabel" GridPane.rowIndex="7" GridPane.columnIndex="1" styleClass="dialog-client-nom" />

                    <Label text="Coût total :" GridPane.rowIndex="8" GridPane.columnIndex="0" styleClass="dialog-client-info" />
                    <Label fx:id="coutLabel" GridPane.rowIndex="8" GridPane.columnIndex="1" styleClass="dialog-client-nom" />
                </GridPane>
            </VBox>
        </HBox>

       
        <HBox alignment="CENTER" spacing="25">
            <Button fx:id="btnFermer" text="Fermer" styleClass="btn-annuler"/>
        </HBox>
    </VBox>
</StackPane>

